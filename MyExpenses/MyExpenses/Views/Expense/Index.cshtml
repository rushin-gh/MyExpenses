@model List<MyExpenses.Models.Expense>
@{
    
}

<style>
    /* Basic Table Styling */
    table {
        width: 100%; /* Makes the table take up the full width of its container */
        border-collapse: collapse; /* Collapses borders into a single border */
        margin-bottom: 20px; /* Adds some space below the table */
        font-family: Arial, sans-serif; /* Sets a common sans-serif font */
        table-layout: fixed;
        width: 100%;
    }

    /* Table Headers (th) and Table Data (td) */
    th, td {
        max-width: 33%;
        border: 1px solid #ddd; /* Light grey border for cells */
        padding: 8px; /* Padding inside cells */
        text-align: left; /* Aligns text to the left by default */
        word-wrap: break-word;
    }

    /* Table Headers Specific Styling */
    th {
        background-color: #f2f2f2; /* Light grey background for headers */
        color: #333; /* Darker text color for headers */
        font-weight: bold; /* Bold text for headers */
        text-align: center; /* Center align header text */
    }

    /* Zebra Striping (optional: for alternating row colors) */
    /* Uncomment the following block if you want alternating row backgrounds */
    /*
    tr:nth-child(even) {
      background-color: #f9f9f9;
    }
    */

    /* Hover effect on rows */
    tr:hover {
        background-color: #f5f5f5; /* Slightly darker background on row hover */
    }

    /* Caption styling (if you use a <caption> element) */
    caption {
        padding: 10px;
        font-size: 1.2em;
        font-weight: bold;
        text-align: left;
        margin-bottom: 10px;
        color: #333;
    }
</style>

<div>
    <table>
        <thead>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Amount</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var expense in Model)
            {
                <tr>
                    <td>@expense.Title</td>
                    <td>@expense.Desc</td>
                    <td>@expense.Amount</td>
                </tr>
            }
        </tbody>
    </table>
</div>
