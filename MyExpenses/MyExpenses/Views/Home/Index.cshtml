@model MyExpenses.Models.User
@{
    ViewData["Title"] = "Login/Register";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Login/Register</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #f8f9fa;
        }

        .form-card {
            max-width: 400px;
            margin: 5% auto;
            padding: 2rem;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
            background: #ffffff;
            border-radius: 12px;
        }

        .toggle-link {
            cursor: pointer;
            text-decoration: underline;
            color: #007bff;
        }

        #register-ui {
            display: none;
        }
    </style>
</head>
<body>
    <div class="container vh-100 d-flex justify-content-center align-items-center">
        <div class="form-card text-start w-100" style="max-width: 400px;">
            <div id="login-ui">
                <h3 class="text-center mb-4">Login</h3>
                @using (Html.BeginForm("Login", "Home", FormMethod.Post))
                {
                    <div class="mb-3">
                        @Html.LabelFor(x => x.Username)
                        @Html.TextBoxFor(x => x.Username, new { @class = "form-control", @id = "loginUsernameInput" })
                        <div id="username-err" class="text-danger small"></div>
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(x => x.Password)
                        @Html.PasswordFor(x => x.Password, new { @class = "form-control", @id = "loginPasswordInput" })
                        <div id="password-err" class="text-danger small"></div>
                    </div>

                    <div class="d-flex justify-content-between">
                        <button type="reset" class="btn btn-secondary">Reset</button>
                        <button type="submit" class="btn btn-primary">Login</button>
                    </div>

                    <div class="mt-3 text-center">
                        <span class="toggle-link" onclick="SwitchScreens()">Don't have an account? Register</span>
                    </div>
                }
            </div>

            <div id="register-ui">
                <h3 class="text-center mb-4">Register</h3>
                @using (Html.BeginForm("Register", "Home", FormMethod.Post, new { @onsubmit = "return ValidateRegistrationForm()", @onreset = "resetErrors()" }))
                {
                    <div class="mb-3">
                        @Html.LabelFor(x => x.Username)
                        @Html.TextBoxFor(x => x.Username, new { @class = "form-control", @id = "usernameInput" })
                        <div id="username-err" class="text-danger small"></div>
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(x => x.Password)
                        @Html.PasswordFor(x => x.Password, new { @class = "form-control", @id = "passwordInput" })
                        <div id="password-err" class="text-danger small"></div>
                    </div>

                    <div class="d-flex justify-content-between">
                        <button type="reset" class="btn btn-secondary">Reset</button>
                        <button type="submit" class="btn btn-success">Register</button>
                    </div>

                    <div class="mt-3 text-center">
                        <span class="toggle-link" onclick="SwitchScreens()">Already have an account? Login</span>
                    </div>
                }
            </div>
        </div>
    </div>

    <script>
        function SwitchScreens() {
            const login = document.getElementById("login-ui");
            const register = document.getElementById("register-ui");

            if (login.style.display === "none") {
                login.style.display = "block";
                register.style.display = "none";
            } else {
                login.style.display = "none";
                register.style.display = "block";
            }
        }

        function resetErrors() {
            document.getElementById("username-err").innerText = "";
            document.getElementById("password-err").innerText = "";
        }

        function ValidateRegistrationForm() {
            // Your validation logic here
            return true;
        }
    </script>
</body>
</html>